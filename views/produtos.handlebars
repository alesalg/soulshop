<section class="m-1">
    <a href="/produtos/novo" class="btn btn-dark">
        <i class="bi bi-plus"></i>
        Criar produto
    </a>
    <hr>
    <form method="GET">
        <input type="text" name="nomeProduto" placeholder="Nome do Produto" class="form-control form-control-sm " value="{{nomeProduto}}" />
        <button class="btn btn-sm btn-dark mt-1"><i class="bi bi-search">Buscar</i></button>
    </form>
    <div class="table-responsive">
        <table class="table">
        <thead>
            <th>Nome</th>
            <th>Preço</th>
            <th>Descrição</th>
            <th>Quantidade</th>
            <th>Ações</th>
        </thead>
        <tbody>
            {{#each produtos}}
                <tr>
                    <td>
                        {{#if this.image}}
                            <img src="{{this.image}}" alt="Product image" width="72">
                        {{else}}
                            <img src="https://th.bing.com/th/id/OIP.AC9frN1qFnn-I2JCycN8fwHaEK?w=329&h=185&c=7&r=0&o=5&pid=1.7" alt="placeholder" width="72">
                        {{/if}}
                        
                    </td>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.quantity}}</td>
                    <td>
                        <div class="d-flex">
                            <div class="m-1">
                                <a href="/produtos/editar/{{this._id}}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                            <div class="m-1">
                                <form action="/produtos/deletar" method="POST">
                                    <input type="hidden" name="id" value="{{this._id}}">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    </div>
</section>